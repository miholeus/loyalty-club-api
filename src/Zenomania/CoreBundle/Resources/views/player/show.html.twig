{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Player</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ player.id }}</td>
                        </tr>
                        <tr>
                            <th>Firstname</th>
                            <td>{{ player.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ player.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Middlename</th>
                            <td>{{ player.middlename }}</td>
                        </tr>
                        <tr>
                            <th>Bdate</th>
                            <td>{% if player.bdate %}{{ player.bdate|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Foto</th>
                            <td>{{ player.foto }}</td>
                        </tr>
                        <tr>
                            <th>Isactive</th>
                            <td>{% if player.isActive %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Createdon</th>
                            <td>{% if player.createdOn %}{{ player.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Updatedon</th>
                            <td>{% if player.updatedOn %}{{ player.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul class="pull-right">
                        <a class="btn btn-default" href="{{ path('player_index') }}">Back to the list</a>
                        <a class="btn btn-primary" href="{{ path('player_edit', { 'id': player.id }) }}">Edit</a>
                    </ul>
                    {{ form_start(delete_form) }}
                    <input id="player_delete_button" class="btn btn-danger pull-left" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
    {{ confirm('#player_delete_button') }}
{% endblock %}
