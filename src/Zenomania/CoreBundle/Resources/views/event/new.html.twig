{% extends 'ZenomaniaCoreBundle:event:form.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box box-primary">
                {{ form_start(form) }}
                {{ form_row(form._token) }}
                <div class="box-header with-border">
                    <h3 class="box-title">Создание события</h3>
                </div>
                <div class="box-body">
                    {{ form_row(form.name) }}
                    {{ form_row(form.date) }}
                    {{ form_row(form.purchasable) }}
                    {{ form_row(form.chship) }}
                    {{ form_row(form.clubHome) }}
                    {{ form_row(form.clubGuest) }}
                    {{ form_row(form.place) }}
                    {{ form_row(form.season) }}
                    {{ form_row(form.sport) }}
                </div>
                <div class="box-footer">
                    <ul class="pull-right">
                        <input type="submit" class="btn btn-primary pull-right" value="Сохранить"/>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование результативного игрока</h3>
                </div>
                <div class="box-body">
                    {{ form_row(form.mvp) }}
                </div>
            </div>
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование стартового состава</h3>
                </div>
                {% for player in form.lineup %}
                    <div class="box-body">
                        {{ form_widget(player.player) }}
                    </div>
                {% endfor %}
            </div>
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование счёта по партиям</h3>
                </div>
                <div class="row" style="margin-right: 0px;">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">Round</div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">scoreHome</div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">scoreGuest</div>
                </div>

                {% for round in form.rounds %}
                    <div class="row" style="margin-left: 0; margin-right: 0;">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">{{ form_widget(round.nameRound) }}</div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group">{{ form_widget(round.homeScore) }}</div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group">{{ form_widget(round.guestScore) }}</div>
                    </div>
                {% endfor %}
                <div class="row" style="margin-left: 0; margin-right: 0;">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">Счёт в матче</div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group">{{ form_widget(form.scoreHome) }}</div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group">{{ form_widget(form.scoreGuest) }}</div>
                </div>
                <div class="box-footer">
                    <ul class="pull-right">
                        <a class="btn btn-default" href="{{ path('event_index') }}">Отмена</a>
                        <input type="submit" class="btn btn-primary" value="Сохранить"/>
                        {{ form_end(form, {'render_rest': false}) }}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
