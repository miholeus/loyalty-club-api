{% extends 'ZenomaniaCoreBundle:event:form.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box box-primary">
                {{ form_start(form) }}
                {{ form_row(form._token) }}
                <div class="box-header with-border">
                    <h3 class="box-title">Создание события</h3>
                </div>
                <div class="box-body">
                    {{ form_row(form.name) }}
                    {{ form_row(form.date) }}
                    {{ form_row(form.purchasable) }}
                    {{ form_row(form.chship) }}
                    {{ form_row(form.clubHome) }}
                    {{ form_row(form.clubGuest) }}
                    {{ form_row(form.place) }}
                    {{ form_row(form.season) }}
                    {{ form_row(form.sport) }}
                </div>
                <div class="box-footer">
                    <ul class="pull-right">
                        <input type="submit" class="btn btn-primary pull-right" value="Сохранить"/>
                    </ul>
                    <a class="btn btn-default" href="{{ path('event_index') }}">Отмена</a>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
