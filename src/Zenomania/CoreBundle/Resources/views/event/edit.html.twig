{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box box-primary">
                {{ form_start(edit_form) }}
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование события</h3>
                </div>
                <div class="box-body">
                    {{ form_row(edit_form.name) }}
                    {{ form_row(edit_form.date) }}
                    {{ form_row(edit_form.purchasable) }}
                    {{ form_row(edit_form.chship) }}
                    {{ form_row(edit_form.clubHome) }}
                    {{ form_row(edit_form.clubGuest) }}
                    {{ form_row(edit_form.place) }}
                    {{ form_row(edit_form.promoAction) }}
                    {{ form_row(edit_form.sport) }}
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование результативного игрока</h3>
                </div>
                <div class="box-body">
                    {{ form_row(edit_form.mvp) }}
                </div>
            </div>
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование счёта по партиям</h3>
                </div>
                <div class="row" style="margin-right: 0px;">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">Round</div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">scoreHome</div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">scoreGuest</div>
                </div>
                {% for round in edit_form.scoreInRounds %}
                    <div class="row" style="margin-left: 0px; margin-right: 0px;">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group" style="font-weight: 700; text-align: center;">{{ form_widget(round.nameRound) }}</div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group">{{ form_widget(round.homeScore) }}</div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 form-group">{{ form_widget(round.guestScore) }}</div>
                    </div>
                {% endfor %}
                <div class="box-footer">
                    <ul class="pull-right">
                        <a class="btn btn-default" href="{{ path('club_index') }}">Отмена</a>
                        <input type="submit" class="btn btn-primary" value="Сохранить"/>
                        {{ form_end(edit_form, {'render_rest': false}) }}
                    </ul>
                    {{ form_start(delete_form) }}
                    <input id="event_delete_button" class="btn btn-danger pull-left btn-delete" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
    {{ confirm('#event_delete_button') }}
{% endblock %}
