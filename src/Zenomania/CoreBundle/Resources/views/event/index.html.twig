{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Name</th>
            <th>Scoreinrounds</th>
            <th>Scorehome</th>
            <th>Scoreguest</th>
            <th>Islineup</th>
            <th>Mvp</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                <td>{% if event.date %}{{ event.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.scoreInRounds }}</td>
                <td>{{ event.scoreHome }}</td>
                <td>{{ event.scoreGuest }}</td>
                <td>{% if event.isLineUp %}Yes{% else %}No{% endif %}</td>
                <td>{{ event.mvp }}</td>
                <td>
                    <a href="{{ path('event_show', { 'id': event.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('event_edit', { 'id': event.id }) }}" class="btn btn-default">edit</a>
                    {% if event.scoreSaved %}
                        <a href="{{ path('event_recount', { 'id': event.id }) }}" class="btn btn-default">recount</a>
                    {% else %}
                        <a href="{{ path('event_calculate', { 'id': event.id }) }}" class="btn btn-default">calculate</a>
                    {% endif %}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <nav class="text-center">
        {% include '@ZenomaniaCore/shared/paginator.html.twig' with {paginator: paginator} %}
    </nav>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('event_new') }}">Create a new event</a>
        </li>
    </ul>
{% endblock %}
