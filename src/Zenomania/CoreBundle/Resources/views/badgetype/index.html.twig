{% extends 'base.html.twig' %}

{% block body %}
    <h1>Badge types list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Code</th>
        </tr>
        </thead>
        <tbody>
        {% for badgeType in badgeTypes %}
            <tr>
                <td><a href="{{ path('badge_type_show', { 'id': badgeType.id }) }}">{{ badgeType.id }}</a></td>
                <td>{{ badgeType.title }}</td>
                <td>{{ badgeType.sort }}</td>
                <td>
                    <a href="{{ path('badge_type_show', { 'id': badgeType.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('badge_type_edit', { 'id': badgeType.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('badge_type_new') }}">Create a new badge type</a>
        </li>
    </ul>
{% endblock %}
