{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Product</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>{{ product.categoryId.title}}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ product.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ product.description }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ product.price}}</td>
                        </tr>
                        <tr>
                            <th>Quantity</th>
                            <td>{{ product.quantity }}</td>
                        </tr>
                        <tr>
                            <th>Position</th>
                            <td>{{ product.position }}</td>
                        </tr>
                        <tr>
                            <th>Published</th>
                            <td>{% if product.published %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul class="pull-right">
                        <a class="btn btn-default" href="{{ path('product_index') }}">Back to the list</a>
                        <a class="btn btn-primary" href="{{ path('product_edit', { 'id': product.id }) }}">Edit</a>
                    </ul>
                    {{ form_start(delete_form) }}
                    <input id="product_delete_button" class="btn btn-danger pull-left" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
    {{ confirm('#product_delete_button') }}

{% endblock %}


