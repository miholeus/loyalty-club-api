{% extends 'base.html.twig' %}

{% block body %}
    <h1>Order status list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Code</th>
        </tr>
        </thead>
        <tbody>
        {% for orderStatus in orderStatuses %}
            <tr>
                <td><a href="{{ path('order_status_show', { 'id': orderStatus.id }) }}">{{ orderStatus.id }}</a></td>
                <td>{{ orderStatus.title }}</td>
                <td>{{ orderStatus.code }}</td>
                <td>
                    <a href="{{ path('order_status_show', { 'id': orderStatus.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('order_status_edit', { 'id': orderStatus.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('order_status_new') }}">Create a new order status</a>
        </li>
    </ul>
{% endblock %}
