{% extends 'base.html.twig' %}

{% block body %}
    <h1>Educations list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for education in educations %}
            <tr>
                <td><a href="{{ path('education_show', { 'id': education.id }) }}">{{ education.id }}</a></td>
                <td>{{ education.name }}</td>
                <td>
                    <a href="{{ path('education_show', { 'id': education.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('education_edit', { 'id': education.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('education_new') }}">Create a new education</a>
        </li>
    </ul>
{% endblock %}
