{% extends 'base.html.twig' %}

{% block body %}
    <h1>Orders list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Status</th>
            <th>User</th>
            <th>Date</th>
            <th>Price</th>
            <th>Note</th>
            <th>Created</th>
            <th>Updated</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td><a href="{{ path('order_show', { 'id': order.id }) }}">{{ order.id }}</a></td>
                <td>{{ order.statusId.title }}</td>
                <td>{{ order.userId.__toString() }} </td>
                <td>{{ order.date.format('Y-m-d') }}</td>
                <td>{{ order.price }}</td>
                <td>{{ order.note }}</td>
                <td>{{ order.createdAt.format('Y-m-d') }}</td>
                {% if order.updatedAt %}
                    <td>{{ order.updatedAt.format('Y-m-d') }}</td>
                {% else %}
                    <td></td>
                {% endif %}

                <td>
                    <a href="{{ path('order_show', { 'id': order.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('order_edit', { 'id': order.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('order_new') }}">Create a new order</a>
        </li>
    </ul>
{% endblock %}
