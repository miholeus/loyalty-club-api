{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Order</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ order.statusId.title }}</td>
                        </tr>
                        <tr>
                            <th>User</th>
                            <td>{{ order.userId.firstname }} {{ order.userId.lastname }} {{ order.userId.middlename }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ order.date.format('Y-m-d') }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ order.price }}</td>
                        </tr>
                        <tr>
                            <th>Note</th>
                            <td>{{ order.note }}</td>
                        </tr>
                        <tr>
                            <th>Created at</th>
                            <td>{{ order.createdAt.format('Y-m-d') }}</td>
                        </tr>
                        <tr>
                            <th>Updated at</th>
                            {% if order.updatedAt %}
                                <td>{{ order.updatedAt.format('Y-m-d') }}</td>
                            {% else %}
                                <td></td>
                            {% endif %}
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul class="pull-right">
                        <a class="btn btn-default" href="{{ path('order_index') }}">Back to the list</a>
                        <a class="btn btn-primary" href="{{ path('order_edit', { 'id': order.id }) }}">Edit</a>
                    </ul>
                    {{ form_start(delete_form) }}
                    <input id="order_delete_button" class="btn btn-danger pull-left" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
    {{ confirm('#order_delete_button') }}
{% endblock %}
