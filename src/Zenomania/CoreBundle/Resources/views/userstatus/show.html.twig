{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
			<div class="box">
				<div class="box-header with-border">
					<h3 class="box-title">UserStatus</h3>
				</div>
				<div class="box-body">
					<table class="table table-bordered table-responsive">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ userStatus.id }}</td>
							</tr>
							<tr>
								<th>Name</th>
								<td>{{ userStatus.name }}</td>
							</tr>
							<tr>
								<th>Code</th>
								<td>{{ userStatus.code }}</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="box-footer clearfix">
					<ul class="pull-right">
						<a class="btn btn-default" href="{{ path('user_status_index') }}">Back to the list</a>
						<a class="btn btn-primary" href="{{ path('user_status_edit', { 'id': userStatus.id }) }}">Edit</a>
					</ul>
					{{ form_start(delete_form) }}
					<input id="user_status_delete_button" class="btn btn-danger pull-left" type="submit" value="Delete">
					{{ form_end(delete_form) }}
				</div>
			</div>
		</div>
	</div>
	{{ confirm('#user_status_delete_button') }}
{% endblock %}
