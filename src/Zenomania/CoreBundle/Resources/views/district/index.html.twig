{% extends 'base.html.twig' %}

{% block body %}
    <h1>Districts list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td><a href="{{ path('district_show', { 'id': district.id }) }}">{{ district.id }}</a></td>
                <td>{{ district.name }}</td>
                <td>
                    <a href="{{ path('district_show', { 'id': district.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('district_edit', { 'id': district.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('district_new') }}">Create a new district</a>
        </li>
    </ul>
{% endblock %}
