{% extends 'base.html.twig' %}

{% block body %}
    <h1>UserRole list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for userRole in userRoles %}
            <tr>
                <td><a href="{{ path('user_role_show', { 'id': userRole.id }) }}">{{ userRole.id }}</a></td>
                <td>{{ userRole.name }}</td>
                <td>{{ userRole.title }}</td>
                <td>
                    <a href="{{ path('user_role_show', { 'id': userRole.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('user_role_edit', { 'id': userRole.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_role_new') }}" class="btn btn-default">Create a new entry</a>
{% endblock %}
