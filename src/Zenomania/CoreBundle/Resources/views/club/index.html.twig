{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clubs list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Site</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td><a href="{{ path('club_show', { 'id': club.id }) }}">{{ club.id }}</a></td>
                <td>{{ club.name }}</td>
                <td>{{ club.site }}</td>
                <td>
                    <a href="{{ path('club_show', { 'id': club.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('club_edit', { 'id': club.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <nav class="text-center">
        {% include '@ZenomaniaCore/shared/paginator.html.twig' with {paginator: paginator} %}
    </nav>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('club_new') }}">Create a new club</a>
        </li>
    </ul>
{% endblock %}
