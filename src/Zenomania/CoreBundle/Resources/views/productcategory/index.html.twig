{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product categories list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
        </tr>
        </thead>
        <tbody>
        {% for productCategory in productCategories %}
            <tr>
                <td><a href="{{ path('productcategory_show', { 'id': productCategory.id }) }}">{{ productCategory.id }}</a></td>
                <td>{{ productCategory.title }}</td>
                <td>
                    <a href="{{ path('productcategory_show', { 'id': productCategory.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('productcategory_edit', { 'id': productCategory.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('productcategory_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}
